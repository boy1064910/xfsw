<mapper namespace="User">

	<!-- 用户登录逻辑 -->
	<select id="login" parameterType="User" resultType="User">
		SELECT * FROM User WHERE
		<choose>
			<when test="account != null and '' != account and pwd != null and '' != pwd">
				account = #{account} AND pwd = #{pwd}
			</when>
			<!-- 微信登录 -->
			<otherwise>1 != 1</otherwise>
		</choose>
	</select>

